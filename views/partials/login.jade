.row#login
	.col.s12.center
		h1 Two.deux
		p Sign in to begin
		div(ng-show='error') {{errorMessage}}
	.col.l4.offset-l4.m6.offset-m3 
		.card-panel.grey.lighten-4
			.row.no-margin-bottom
				.center
					i.large.material-icons 
						| perm_identity
				form.form(ng-submit="login()")
					.input-field.col.s12
						input#username.validate(type='email', ng-model="loginForm.username")
						label.active(for='username') Username

					.input-field.col.s12
						input#password.validate(type='password', ng-model="loginForm.password")
						label.active(for='password') Password

					.col.s12
						input.blue(type="checkbox")#remember-me
						label(for="remember-me") Remember me

					.col.s12
						button.btn-large.blue(ng-disabled="disabled") Log In

				.col.s12.right-align
					p
						a(href="#") Forgot password?
		.center
			a(href="#/register") Create account